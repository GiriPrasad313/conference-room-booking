# Environment Variables Template
# Copy this file to .env and fill in your values

# Node environment
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-minimum-32-characters
REFRESH_TOKEN_SECRET=your-secure-refresh-secret-min-32-chars
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=localdev123
POSTGRES_DB=conference_booking
DATABASE_URL=postgresql://postgres:localdev123@localhost:5432/conference_booking

# MongoDB Database
MONGO_USER=admin
MONGO_PASSWORD=localdev123
MONGO_URI=mongodb://admin:localdev123@localhost:27017/bookings?authSource=admin

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001
ROOMS_SERVICE_URL=http://localhost:3002
BOOKING_SERVICE_URL=http://localhost:3003
WEATHER_SERVICE_URL=http://localhost:5000

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SQS Queue (for email worker)
SQS_QUEUE_URL=

# Email Configuration (for production)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="ConferenceBook" <noreply@yourdomain.com>

# Environment Variables Template
# Copy this file to .env and fill in your values

# Node environment
NODE_ENV=development

# JWT Configuration - Generate secure random strings for production
JWT_SECRET=generate-a-secure-random-string-min-32-characters
REFRESH_TOKEN_SECRET=generate-another-secure-random-string-min-32-chars
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=conference_booking
DATABASE_URL=postgresql://postgres:change-this-password@postgres:5432/conference_booking

# MongoDB Database
MONGO_USER=admin
MONGO_PASSWORD=change-this-password
MONGO_URI=mongodb://admin:change-this-password@mongo:27017/bookings?authSource=admin

# Service URLs (for inter-service communication in Docker)
AUTH_SERVICE_URL=http://auth-service:3001
ROOMS_SERVICE_URL=http://rooms-service:3002
BOOKING_SERVICE_URL=http://booking-service:3003
WEATHER_SERVICE_URL=http://weather-service:5000

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# SQS Queue (for email notifications)
SQS_QUEUE_URL=

# SNS Topic (for email delivery)
SNS_TOPIC_ARN=
